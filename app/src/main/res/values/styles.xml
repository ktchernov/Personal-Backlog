<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#12c700</item>
        <item name="colorPrimaryDark">#056f00</item>
        <item name="colorAccent">#e65100</item>
    </style>

    <style name="SectionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="PBLListView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:choiceMode">none</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="float_background_color">@android:color/transparent</item>
        <item name="android:descendantFocusability">afterDescendants</item>
        <item name="float_alpha">0.9</item>
        <item name="use_default_controller">false</item>
        <item name="parallax_enabled">true</item>
    </style>

    <style name="PBLListTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard_horizontal_padding</item>
        <item name="android:layout_marginRight">@dimen/standard_horizontal_padding</item>
        <item name="android:layout_marginTop">@dimen/standard_vertical_padding</item>
        <item name="android:layout_marginBottom">@dimen/standard_vertical_padding</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PBLSmallClickableIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:minHeight">@dimen/clickable_icon_small_size</item>
        <item name="android:minWidth">@dimen/clickable_icon_small_size</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="PBLItem">
        <item name="android:paddingLeft">@dimen/standard_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/standard_horizontal_padding</item>
        <item name="android:minHeight">@dimen/row_height</item>
        <item name="android:background">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/item_card_corner_radius</item>
    </style>

    <style name="ItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_toStartOf">@id/options_handle</item>
        <item name="android:layout_toEndOf">@id/drag_handle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>
